---
import '../styles/styles.css';

export interface Props {
    title?: string;
}

const { title = "Obviously - Multiplayer Game" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <div class="container">
        <div class="logo-container">
            <img src={`${baseUrl}logo.jpg`} alt="Obviously" class="logo" />
        </div>
        <slot />
        <div id="message-area"></div>
    </div>
</body>
</html>